{
  "name": "@gesslar/toolkit",
  "version": "0.7.0",
  "description": "Get in, bitches, we're going toolkitting.",
  "main": "./src/index.js",
  "type": "module",
  "exports": {
    ".": {
      "types": "./src/types/index.d.ts",
      "default": "./src/index.js"
    }
  },
  "files": [
    "src/",
    "README.md",
    "UNLICENSE.txt"
  ],
  "sideEffects": false,
  "engines": {
    "node": ">=22"
  },
  "scripts": {
    "types:build": "tsc -p tsconfig.types.json",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "submit": "npm publish --access public",
    "update": "npx npm-check-updates -u && npm install",
    "test": "node --test tests/unit/*.test.js",
    "pr": "gt submit --publish --restack --ai"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/gesslar/toolkit.git"
  },
  "keywords": [
    "toolkit",
    "utilities",
    "file",
    "directory",
    "data",
    "flavaflav",
    "chuck",
    "norris",
    "validation",
    "typescript",
    "nodejs",
    "iwasbornonapirateship"
  ],
  "author": "gesslar",
  "license": "Unlicense",
  "homepage": "https://github.com/gesslar/toolkit#readme",
  "dependencies": {
    "@gesslar/colours": "^0.0.1",
    "ajv": "^8.17.1",
    "globby": "^15.0.0",
    "json5": "^2.2.3",
    "yaml": "^2.8.1"
  },
  "devDependencies": {
    "@stylistic/eslint-plugin": "^5.5.0",
    "@types/node": "^24.9.1",
    "@typescript-eslint/eslint-plugin": "^8.46.2",
    "@typescript-eslint/parser": "^8.46.2",
    "eslint": "^9.38.0",
    "eslint-plugin-jsdoc": "^61.1.8"
  }
}
